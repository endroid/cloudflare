{
	"name": "cloudflare-worker-endroid",
	"private": true,
	"type": "module",
	"engines": {
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm",
		"pnpm": ">=10.0.0"
	},
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
		"check": "pnpm run format && pnpm run format:check && pnpm run lint && pnpm run lint:check",
		"deploy": "pnpm run build && wrangler deploy",
		"dev": "react-router dev",
		"format": "oxfmt app",
		"format:check": "oxfmt app --check",
		"format:watch": "nodemon --watch app --ext ts,tsx,js,jsx --exec \"oxfmt app\"",
		"lint": "oxlint app --fix --react-plugin --jsx-a11y-plugin",
		"lint:check": "oxlint app --react-plugin --jsx-a11y-plugin --deny-warnings",
		"lint:watch": "nodemon --watch app --ext ts,tsx,js,jsx --exec \"oxlint app --fix --react-plugin --jsx-a11y-plugin --quiet\"",
		"preview": "pnpm run build && vite preview",
		"typecheck": "pnpm run cf-typegen && react-router typegen && tsc -b"
	},
	"dependencies": {
		"isbot": "^5.1.32",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-router": "^7.9.5"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.14.0",
		"@react-router/dev": "^7.9.5",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22.19.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"concurrently": "^9.2.1",
		"nodemon": "^3.1.11",
		"oxfmt": "^0.13.0",
		"oxlint": "^1.28.0",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.46.0"
	}
}